<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="160dp"
    android:layout_height="120dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:id="@+id/category_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/category_animals"
        android:padding="16dp">

        <ImageView
            android:id="@+id/img_category_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:alpha="0.3"
            android:contentDescription="@string/category_icon"
            android:src="@android:drawable/ic_menu_compass" />

        <TextView
            android:id="@+id/tv_category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/white"
            tools:text="Животные" />

        <TextView
            android:id="@+id/tv_category_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_category_name"
            android:layout_marginTop="4dp"
            android:alpha="0.8"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textSize="12sp"
            tools:text="Узнай всё о животных нашей планеты" />

        <TextView
            android:id="@+id/tv_entry_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="@color/white"
            tools:text="12 статей" />

    </RelativeLayout>

</androidx.cardview.widget.CardView> 